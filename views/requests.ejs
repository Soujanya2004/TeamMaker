<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Requests for Posts - Hackathon Portal</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f9;
      margin: 0;
      padding: 0;
    }

    .requests-list {
      max-width: 900px;
      margin: 2em auto;
      background-color: white;
      padding: 2em;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
      font-size: 2em;
      color: #333;
      margin-bottom: 1em;
    }

    h2 {
      color: #333;
      margin: 0.5em 0;
    }

    h3 {
      color: #4CAF50;
      margin-top: 1.5em;
      font-size: 1.2em;
    }

    p {
      font-size: 1.1em;
      line-height: 1.5em;
      color: #555;
    }

    ul {
      list-style: none;
      padding-left: 0;
    }

    li {
      margin-bottom: 0.8em;
      font-size: 1.1em;
      color: #444;
    }

    li:last-child {
      margin-bottom: 0;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .requests-list {
        width: 90%;
        padding: 1.5em;
      }

      h1 {
        font-size: 1.8em;
      }

      h2 {
        font-size: 1.5em;
      }

      h3 {
        font-size: 1.1em;
      }

      p, li {
        font-size: 1em;
      }
    }
  </style>
</head>
<body>

  <div class="requests-list">
    <h1>Posts with Requests</h1>
    <% if (posts.length > 0) { %>
      <ul>
        <% posts.forEach(post => { %>
          <li>
            <h2><%= post.title %></h2>
            <p><%= post.description %></p>
            <h3>Requests:</h3>
            <ul>
              <% post.requests.forEach(request => { %>
                <li><%= request.name %></li>
              <% }) %>
            </ul>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No posts with requests.</p>
    <% } %>
  </div>

</body>
</html>
